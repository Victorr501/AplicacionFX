<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="TOP_CENTER" prefHeight="485.0" prefWidth="691.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aplicacion.aplicacionfx.vista.actualizar.ActualizarController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Actualizar Usuario" />

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nombreField" promptText="Integre el nombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="emailField" promptText="Integre el email" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Contrase単a:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <PasswordField fx:id="passwordField" promptText="Integre la contrase単a" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Confirmar Contrase単a" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <PasswordField fx:id="confirmarPasswordField" promptText="Confirme la contrase単a" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Rol:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ComboBox fx:id="rolComboBox" promptText="Integre el rol" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Activo:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <CheckBox fx:id="activoCheckBox" text="" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <Label fx:id="mensajeErrorLabel" style="-fx-font-size: 14px; -fx-padding: 8 20;" textFill="red" />

    <VBox alignment="CENTER" spacing="10">
        <Button onAction="#handleRegistrarUsuario" style="-fx-font-size: 16 px; -fx-padding: 8 20;" text="Registrar Usuario" />
        <Button onAction="#handleCancelarRegistro" style="-fx-font-size: 14px; -fx-padding: 6 15;" text="Cacelar" />
    </VBox>

</VBox>
